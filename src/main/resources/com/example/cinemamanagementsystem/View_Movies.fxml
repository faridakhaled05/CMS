<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Stage?>

<fx:root title="View_Movies" type="Stage" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cinemamanagementsystem.View_Movies_Controller">
   <scene>
      <Scene>
         <root>
            <AnchorPane prefHeight="400.0" prefWidth="350.0" style="-fx-background-color: MAROON;">
               <children>
                  <ComboBox fx:id="MoviesComboBox" layoutX="14.0" layoutY="14.0" onAction="#showMovieDetails" prefWidth="150.0" promptText="Movies" />
                  <Label fx:id="MovieDetailsLabel" layoutX="38.0" layoutY="77.0" text="Movie Details:" textFill="WHITE" visible="false">
                     <font>
                        <Font size="19.0" />
                        <Font name="System Bold" size="19.0" />
                     </font>
                  </Label>
                  <Button fx:id="Back_Button" layoutX="140.0" layoutY="351.0" mnemonicParsing="false" onAction="#BackButtonFun" text="Back" />
               </children>
            </AnchorPane>
         </root>
      </Scene>
   </scene>
</fx:root>
